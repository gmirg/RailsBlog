<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan=3 >Actions</th>
            <th>Author</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %> 
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to 'Show', article_path(article)%></td>
            <td><%= link_to 'Edit', edit_article_path(article)%></td>
            <td><%= link_to 'Delete',article_path(article), data: { turbo_method: :delete }, :onclick=>"return confirm('Are you sure you want to delete this ')"%></td>
            <td><%= article.user.username if article.user%></td>
        </tr>
        <% end %>
    </tbody>
</table>

<p><%= link_to 'Create a new article', new_article_path%></p>